# =============================================================================
# ChaosChain Gateway - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values.
# DO NOT commit .env to version control.
# =============================================================================

# =============================================================================
# SERVER
# =============================================================================

# HTTP server port
PORT=3000

# HTTP server host (0.0.0.0 to listen on all interfaces)
HOST=0.0.0.0

# Logging level: debug, info, warn, error
LOG_LEVEL=info

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================

# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
# 
# Local Docker:
#   docker run -d --name gateway-postgres -e POSTGRES_PASSWORD=gateway -e POSTGRES_DB=gateway -p 5432:5432 postgres:15
#   DATABASE_URL=postgresql://postgres:gateway@localhost:5432/gateway
#
DATABASE_URL=postgresql://postgres:gateway@localhost:5432/gateway

# =============================================================================
# BLOCKCHAIN (Ethereum)
# =============================================================================

# JSON-RPC endpoint for Ethereum
# Sepolia: https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
# Base Sepolia: https://base-sepolia.g.alchemy.com/v2/YOUR_API_KEY
RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Chain ID (Sepolia: 11155111, Base Sepolia: 84532)
CHAIN_ID=11155111

# Block confirmations for tx finality
CONFIRMATION_BLOCKS=2

# =============================================================================
# CHAOSCHAIN CONTRACTS (Read-only)
# =============================================================================

# ChaosCore (Ethereum Sepolia v0.4.30)
CHAOS_CORE_ADDRESS=0xF6a57f04736A52a38b273b0204d636506a780E67

# RewardsDistributor (Ethereum Sepolia v0.4.30)
REWARDS_DISTRIBUTOR_ADDRESS=0x0549772a3fF4F095C57AEFf655B3ed97B7925C19

# =============================================================================
# ARWEAVE (Turbo)
# =============================================================================

# Turbo gateway URL
TURBO_GATEWAY_URL=https://turbo.ardrive.io

# Turbo API key (optional, for uploads > 100KB)
# TURBO_API_KEY=your_turbo_api_key

# =============================================================================
# SIGNERS
# =============================================================================

# Private key for signing transactions (0x prefixed hex)
# Fund with test ETH from faucets
SIGNER_PRIVATE_KEY=0x...
