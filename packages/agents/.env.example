# ChaosChain Agents Environment Configuration
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY="your_openai_api_key_here"

# Optional: Agent-specific configuration
SCOUT_AGENT_PRIVATE_KEY="your_scout_agent_private_key_here"
CROSSMINT_API_KEY="your_crossmint_api_key_here"

# Optional: Studio environment selection
STUDIO_MODE="mvp"  # Options: "development", "production", "mvp"

# Optional: Logging level
LOG_LEVEL="INFO"  # Options: "DEBUG", "INFO", "WARNING", "ERROR"

# Optional: Custom endpoints (if different from defaults)
# CUSTOM_ARN_RELAY_URL="wss://your-custom-arn-relay.com"
# CUSTOM_RPC_URL="https://your-custom-rpc.com"
# CUSTOM_IPFS_GATEWAY="https://your-custom-ipfs-gateway.com"
